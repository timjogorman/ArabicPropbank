    <frameset cdef="" edef="To flame, to blaze, to get hot" id="01">
        <role argnum="1" argrole="entity flamed"/>
        <frame>
            <mapping>
                <comment/>
            </mapping>
            <example>
                <parse>التهبت النار في المعمل</parse>
                <comment/>
                <arg f="" g="the fire" n="1">النار</arg>
                <arg f="" g="in the factory" n="2">في المعمل</arg>
            </example>
            <comment/>
        </frame>
        <comment/>
        <role argnum="2" argrole="in what"/>
