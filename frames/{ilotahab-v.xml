    <frameset cdef="" edef="to feel burning desire/love for" id="02">
        <role argnum="1" argrole="entity burning"/>
        <frame>
            <mapping>
                <comment/>
            </mapping>
            <example>
                <parse>التهب * حبا لوطنه</parse>
                <comment/>
                <arg f="" g="NONE" n="1">-NONE- * ?</arg>
                <arg f="" g="love" n="2">حبا</arg>
                <arg f="" g="for his country" n="3">لوطنه</arg>
            </example>
            <comment/>
        </frame>
        <comment/>
        <role argnum="2" argrole="in what"/>
        <role argnum="3" argrole="for what"/>
    </frameset>
    <frameset cdef="" edef="to get angry/mad on" id="03">
        <role argnum="1" argrole="entity getting mad"/>
        <frame>
            <mapping>
                <comment/>
            </mapping>
            <example>
                <parse>التهب الوالد على ابنه</parse>
                <comment/>
                <arg f="" g="the father" n="1">الوالد</arg>
                <arg f="" g="on his son" n="2">على ابنه</arg>
            </example>
            <comment/>
        </frame>
        <comment/>
        <role argnum="2" argrole="on whom"/>
    </frameset>
    <frameset cdef="" edef="to inflame" id="04">
        <role argnum="1" argrole="entity getting inflamed"/>
        <frame>
            <mapping>
                <comment/>
            </mapping>
            <example>
                <parse>التهبت اذن الولد</parse>
                <comment/>
                <arg f="" g="ear" n="2">اذن</arg>
                <arg f="" g="the boy" n="1">الولد</arg>
            </example>
            <comment/>
        </frame>
        <comment/>
