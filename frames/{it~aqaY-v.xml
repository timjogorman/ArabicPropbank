<!DOCTYPE verb SYSTEM "verb.dtd">
<verb>
    <id>{it~aqaY</id>
    <comment/>
    <frameset cdef="" edef="avoid" id="01">
        <role argnum="0" argrole="entity avoiding"/>
        <frame>
            <mapping>
                <comment/>
            </mapping>
            <example>
                <parse>من اتقى *  الشر وقع فى الخير</parse>
                <comment/>
                <arg f="" g="NONE" n="0">-NONE- * من</arg>
                <arg f="" g="the evil" n="1">الشر</arg>
            </example>
            <comment/>
        </frame>
        <comment/>
        <role argnum="1" argrole="things avoided"/>
    </frameset>
    <frameset cdef="" edef="to fear Gog, to obey God" id="02">
        <role argnum="0" argrole="entity fearing"/>
        <frame>
            <mapping>
                <comment/>
            </mapping>
            <example>
                <parse>لا بأس بالغنى لمن اتقى * الله</parse>
                <comment/>
                <arg f="" g="NONE" n="0">-NONE- * من</arg>
                <arg f="" g="God" n="1">الله</arg>
            </example>
            <comment/>
        </frame>
        <comment/>
        <role argnum="1" argrole="fearing whom (Usually God)"/>
    </frameset>
    <frameset cdef="" edef="to seek protection, to take shelter" id="03">
        <role argnum="0" argrole="entity taking shelter"/>
        <frame>
            <mapping>
                <comment/>
            </mapping>
            <example>
                <parse>اتقى المحارب بالدرع من سهام العدو</parse>
                <comment/>
                <arg f="" g="the warrior" n="0">المحارب</arg>
                <arg f="" g="with shield" n="1">بالدرع</arg>
                <arg f="" g="from the enemy arrows" n="2">من سهام العدو</arg>
            </example>
            <comment/>
        </frame>
        <comment/>
        <role argnum="1" argrole="with what or where"/>
        <role argnum="2" argrole="from what"/>
    </frameset>
</verb>
