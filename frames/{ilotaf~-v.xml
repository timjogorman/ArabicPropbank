<!DOCTYPE verb SYSTEM "verb.dtd">
<verb>
    <id>{ilotaf~</id>
    <frameset cdef="" edef="to wrap onself in" id="01">
        <role argnum="0" argrole="entity covering himself"/>
        <role argnum="1" argrole="cover, thing wrapped with"/>
        <frame>
            <example>
                <parse>
                    إلتف الرجل  ببطانيته
                </parse>
                <arg f="" g="the man" n="0">الرجل</arg>
                <arg f="" g="with his blanket" n="1">ببطانيته</arg>
            </example>
        </frame>
    </frameset>
    <frameset cdef="" edef="to encircle" id="02">
        <role argnum="0" argrole="causer of encirclement"/>
        <role argnum="1" argrole="thing surrounded"/>
        <frame>
            <example>
                <parse>
                    إلتف الناس حول اللاعب
                </parse>
                <arg f="" g="the people" n="0">الناس</arg>
                <arg f="" g="around the player" n="1">حول اللاعب</arg>
            </example>
        </frame>
    </frameset>
    <frameset cdef="" edef="to detour around , to turn" id="03">
        <role argnum="0" argrole="driver"/>
        <role argnum="1" argrole="location, point of detour"/>
        <frame>
            <example>
                <parse>
                    إلتف السائق عند الشارع الموالي
                </parse>
                <arg f="" g="the driver" n="0">السائق</arg>
                <arg f="" g="at the next street" n="1">عند الشارع الموالي</arg>
            </example>
        </frame>
    </frameset>
    <frameset cdef="" edef="twist, to change form, shape" id="04">
        <role argnum="1" argrole="thing changing shape"/>
        <frame>
            <example>
                <parse>
                    إلتفت أوراق الشجرة
                </parse>
                <arg f="" g="the tree leaves" n="1">أوراق الشجرة</arg>
            </example>
        </frame>
    </frameset>
</verb>
