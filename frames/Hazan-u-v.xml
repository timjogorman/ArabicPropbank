<!DOCTYPE verb SYSTEM "verb.dtd">
<verb>
    <id>Hazan-u</id>
    <frameset cdef="" edef="to be sad" id="01">
        <role argnum="1" argrole="entity feeling sad"/>
        <role argnum="2" argrole="over/about what or entity felt sad for - usually marked with the preposition على"/>
        <frame>
            <example>
                <parse>
                    لا تحزن على الأمس فهو لن يعود
                </parse>
                <arg f="neg" g="no" n="m">لا</arg>
                <arg f="" g="* &amp;lt; you" n="1">-NONE-</arg>
                <arg f="" g="over yesterday" n="2">على الأمس</arg>
            </example>
            <example>
                <parse>
                    متى تحزن على نفسك
                </parse>
                <arg f="" g="* &amp;lt; you" n="1">-NONE-</arg>
                <arg f="" g="for yourself" n="2">على نفسك</arg>
            </example>
        </frame>
    </frameset>
</verb>
